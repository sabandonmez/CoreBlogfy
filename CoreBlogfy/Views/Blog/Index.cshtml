@{ 
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@model List<Blog>
<section class="main-content-w3layouts-agileits">
	<div class="container">
		<h3 class="tittle">Bloglar</h3>
		<div class="inner-sec">
			<!--left-->
			<div class="left-blog-info-w3layouts-agileits text-left">
				<div class="row">
					@foreach (var mod in Model)
					{

					<div class="col-lg-4 card">
						<a href="single.html">
							<img src="@mod.BlogImage" class="card-img-top img-fluid" alt="">
						</a>
						<div class="card-body">
							<ul class="blog-icons my-4">
								<li>
									<a href="#">
										<i class="far fa-calendar-alt"></i> @(((DateTime)mod.BlogCreateDate).ToString("dd/MMM/yyyy"))
									</a>
								</li>
								<li class="mx-2">
									<a href="#">
										<i class="far fa-comment"></i> 0
									</a>
								</li>
								<li>
									<a href="#">
											<i class="fa fa-bars" aria-hidden="true"></i> @mod.Category.CategoryName
									</a>
								</li>

							</ul>
							<h5 class="card-title">
								<a href="single.html">@mod.BlogTitle</a>
							</h5>
							<p class="card-text mb-3">@mod.BlogContent.Substring(0,mod.BlogContent.Substring(0,130).LastIndexOf(" "))...</p>
							<a href="/Blog/BlogDetails/@mod.BlogId/" class="btn btn-primary read-m">Devamını Oku</a>
						</div>
					</div>
					}
				</div>
				<!--//left-->
			</div>
		</div>
	</div>
</section>

